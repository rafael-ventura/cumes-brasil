{
  "extends": "@quasar/app-vite/tsconfig-preset",
  "compilerOptions": {
    "baseUrl": "."
  },
  "include": [
    "src",
    "src-pwa",
    "quasar.d.ts",
    "src-pwa/**/*.ts",
    "src-pwa/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "postcss.config.cjs"
  ],
  "exclude": [
    "./dist",
    "./.quasar",
    "./node_modules",
    "./src-capacitor",
    "./src-cordova",
    "./quasar.config.*.temporary.compiled*"
  ]
}
